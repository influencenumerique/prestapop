generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String         @id @default(cuid())
  name             String?
  email            String         @unique
  emailVerified    DateTime?
  image            String?
  password         String?
  role             Role           @default(USER)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  rejectionReason  String?
  status           UserStatus     @default(ACTIVE)
  verificationDocs Json?
  verifiedById     String?
  accounts         Account[]
  company          Company?
  documents        Document[]
  driverProfile    DriverProfile?
  reviews          Review[]
  sessions         Session[]
  verifiedBy             User?                 @relation("VerifiedByAdmin", fields: [verifiedById], references: [id])
  verifiedUsers          User[]                @relation("VerifiedByAdmin")
  verificationRequests   VerificationRequest[]
  verificationDocuments  VerificationDoc[]
  // Messagerie
  conversations    ConversationParticipant[]
  sentMessages     Message[]      @relation("SentMessages")
  receivedMessages Message[]      @relation("ReceivedMessages")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model VerificationRequest {
  id         String                    @id @default(cuid())
  userId     String
  docs       Json                      // [{type: 'SIRET', url: 'cloudinary_url', status: 'PENDING|OK'}]
  adminNotes String?
  status     VerificationRequestStatus @default(PENDING)
  createdAt  DateTime                  @default(now())
  updatedAt  DateTime                  @updatedAt
  user       User                      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@map("verification_requests")
}

model Document {
  id        String         @id @default(cuid())
  userId    String
  type      DocumentType
  url       String
  status    DocumentStatus @default(MISSING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId])
  @@map("documents")
}

model VerificationDoc {
  id           String                @id @default(cuid())
  userId       String
  documentType DocumentType
  cloudinaryUrl String
  status       VerificationDocStatus @default(PENDING)
  adminNotes   String?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  user         User                  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, documentType])
  @@index([userId])
  @@index([status])
  @@map("verification_docs")
}

model Company {
  id              String           @id @default(cuid())
  userId          String           @unique
  companyName     String
  siret           String?
  phone           String?
  address         String?
  city            String?
  description     String?
  logo            String?
  isVerified      Boolean          @default(false)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  driverFeedbacks DriverFeedback[]
  jobs            Job[]

  @@map("companies")
}

model DriverProfile {
  id              String           @id @default(cuid())
  userId          String           @unique
  phone           String?
  bio             String?
  city            String?
  vehicleTypes    VehicleType[]
  licenseNumber   String?
  insuranceNumber String?
  stripeAccountId String?
  isVerified      Boolean          @default(false)
  isAvailable     Boolean          @default(true)
  rating          Float            @default(0)
  totalDeliveries Int              @default(0)
  totalReviews    Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  region          String?
  bookings        Booking[]        @relation("DriverBookings")
  badges          DriverBadge[]
  feedbacks       DriverFeedback[]
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  tagStats        DriverTagStats[]

  @@map("driver_profiles")
}

model Job {
  id               String          @id @default(cuid())
  companyId        String
  title            String
  description      String?
  typeMission      MissionType     @default(DAY)
  missionZoneType  MissionZoneType @default(URBAN)
  secteurLivraison String
  packageSize      PackageSize     @default(MIXED)
  nombreColis      Int
  startTime        DateTime
  estimatedEndTime DateTime
  vehicleVolume    VehicleVolume
  needsTailLift    Boolean         @default(false)
  dayRate          Int
  status           JobStatus       @default(DRAFT)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  bookings         Booking[]
  company          Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([status])
  @@index([secteurLivraison])
  @@index([typeMission])
  @@map("jobs")
}

model Booking {
  id                  String          @id @default(cuid())
  jobId               String
  driverId            String
  status              JobStatus       @default(ASSIGNED)
  pickedUpAt          DateTime?
  deliveredAt         DateTime?
  proofOfDelivery     String?
  driverNotes         String?
  companyNotes        String?
  agreedPrice         Int
  stripePaymentId     String?
  stripePaymentStatus String?
  paidAt              DateTime?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  driver              DriverProfile   @relation("DriverBookings", fields: [driverId], references: [id])
  job                 Job             @relation(fields: [jobId], references: [id])
  driverFeedback      DriverFeedback?
  review              Review?

  @@unique([jobId, driverId])
  @@index([driverId])
  @@index([status])
  @@map("bookings")
}

model Review {
  id        String   @id @default(cuid())
  bookingId String   @unique
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  @@map("reviews")
}

model DriverFeedback {
  id        String        @id @default(cuid())
  bookingId String        @unique
  companyId String
  driverId  String
  rating    Int
  tags      FeedbackTag[]
  comment   String?
  createdAt DateTime      @default(now())
  booking   Booking       @relation(fields: [bookingId], references: [id])
  company   Company       @relation(fields: [companyId], references: [id])
  driver    DriverProfile @relation(fields: [driverId], references: [id])

  @@index([driverId])
  @@index([companyId])
  @@map("driver_feedbacks")
}

model DriverBadge {
  id       String        @id @default(cuid())
  driverId String
  badge    BadgeType
  earnedAt DateTime      @default(now())
  driver   DriverProfile @relation(fields: [driverId], references: [id])

  @@unique([driverId, badge])
  @@index([driverId])
  @@map("driver_badges")
}

model DriverTagStats {
  id         String        @id @default(cuid())
  driverId   String
  tag        FeedbackTag
  count      Int           @default(0)
  percentage Float         @default(0)
  driver     DriverProfile @relation(fields: [driverId], references: [id])

  @@unique([driverId, tag])
  @@index([driverId])
  @@map("driver_tag_stats")
}

enum Role {
  COMPANY
  DRIVER
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  PENDING_VERIF
  VERIFIED
  REJECTED
}

enum VerificationRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DocumentType {
  KBIS
  IDENTITY
  DRIVER_LICENSE
  VEHICLE_INSURANCE
  KBIS_3MONTHS
  MANAGER_IDENTITY
  OTHER
}

enum DocumentStatus {
  OK
  MISSING
  ILLEGIBLE
}

enum VerificationDocStatus {
  PENDING
  APPROVED
  REJECTED
}

enum JobStatus {
  DRAFT
  OPEN
  ASSIGNED
  IN_PROGRESS
  DELIVERED
  COMPLETED
  CANCELLED
  PENDING
}

enum VehicleType {
  BIKE
  SCOOTER
  CAR
  VAN
  TRUCK
}

enum PackageSize {
  SMALL
  MEDIUM
  LARGE
  MIXED
}

enum VehicleVolume {
  CUBE_6M
  CUBE_9M
  CUBE_12M
  CUBE_15M
  CUBE_20M
}

enum MissionType {
  DAY
  HALF_DAY
  WEEK
}

enum MissionZoneType {
  URBAN
  CITY_TO_CITY
}

enum FeedbackTag {
  PUNCTUAL
  CAREFUL
  COMMUNICATIVE
  FAST
  PRECISE
  FRIENDLY
  RESOURCEFUL
  RESPONSIVE
  PROFESSIONAL
  RELIABLE
}

enum BadgeType {
  PUNCTUALITY_CHAMPION
  CAREFUL_EXPERT
  SPEED_DEMON
  COMMUNICATION_STAR
  TOP_10_REGION
  TOP_3_REGION
  FIRST_100_DELIVERIES
  FIRST_500_DELIVERIES
  PERFECT_RATING
  RISING_STAR
}

// ========== MESSAGERIE INTERNE ==========

model Conversation {
  id           String                    @id @default(cuid())
  lastMessage  DateTime                  @default(now())
  createdAt    DateTime                  @default(now())
  updatedAt    DateTime                  @updatedAt
  participants ConversationParticipant[]
  messages     Message[]

  @@index([lastMessage])
  @@map("conversations")
}

model ConversationParticipant {
  id             String       @id @default(cuid())
  conversationId String
  userId         String
  joinedAt       DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([conversationId])
  @@index([userId])
  @@map("conversation_participants")
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  senderId       String
  receiverId     String?
  content        String
  readAt         DateTime?
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender         User         @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver       User?        @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: SetNull)

  @@index([conversationId, createdAt])
  @@index([senderId])
  @@index([receiverId])
  @@map("messages")
}
